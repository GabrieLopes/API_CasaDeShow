@model IEnumerable<CasaEventos.Models.Evento>

@{
    ViewData["Title"] = "Index";
}

<h1>Eventos</h1>

<p>
    <a asp-action="Create">Criar novo Evento</a>
</p>
<table class="table">
    <tbody>
    <div class="row">
@foreach (var item in Model) {
 <div class="col-6">  
<div class="card mb-3 border-dark" style="max-width: 750px; col-sm-6">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="@item.Imagem" class="img-fluid card-img">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <b><h5 class="card-title">@item.NomeEvento</h5></b>
        <p class="card-text">   <b>Capacidade:</b> @item.CapacidadeEvento <b>Ingressos Restantes:</b> @item.QuantidadeIngressos <br>
                                <b>Preço Unitário:</b> R$@item.ValorIngresso <b>Casa:</b> @item.Casa.Nome 
                                <b>Genero:</b> @item.Genero.GeneroNome <b>Data:</b> @item.DataEvento<br>
            <a asp-action="Edit" asp-route-id="@item.EventoId">Editar</a> |
            <a asp-action="Delete" asp-route-id="@item.EventoId">Deletar</a> 
        </p>

      </div>
    </div>
  </div>
  </div>
</div>     
}
    </div>
    </tbody>
</table>
