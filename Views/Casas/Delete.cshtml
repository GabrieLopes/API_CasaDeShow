@model CasaEventos.Models.Casa

@{
    ViewData["Title"] = "Deletar";
}


<h1 class="text-danger" style="text-align: center;">DELETAR</h1>

<h3 class="text-danger">Você tem certeza que quer fazer isso?</h3>
<div class="text-danger">
    <h4>As mudanças não podem ser desfeitas após a exclusão</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CasaId" />
        <button type="submit" value="Delete" class="btn btn-danger">Deletar</button> |
        <a asp-action="Index" class="btn btn-light">Voltar para a lista</a>
    </form>
</div>
