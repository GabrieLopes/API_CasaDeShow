@model IEnumerable<CasaEventos.Models.Evento>

@{
    ViewData["Title"] = "Home Page";
    int count = 0;
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
    <div class="carousel-item active" data-interval="2000">
      <img src="/Img/technic_upcoming_still_1280x720_jpg.jpg" class="d-block w-100" style="height: 800px;">
       <div class="carousel-caption d-none d-md-block">
        <h5>Proximos Eventos</h5>
      </div>
    </div>
@if(Model.Count() != 0 ){
    count++;
    if(count < 5)
    {
    @foreach (var item in Model)
      {
     <div class="carousel-item" data-interval="4000">
      <img src="@item.Imagem" class="d-block w-100" style="height: 800px;">
       <div class="carousel-caption d-none d-md-block">
        <h4><b>@item.NomeEvento</b></h4>
        <h5><b>Ingressos: @item.QuantidadeIngressos</b></h5>
        <a type="submit" class="btn btn-primary" asp-route-id="@item.EventoId" asp-controller="Compras" asp-action="Compra">COMPRAR AGORA</a>
      </div>
    </div>
      }

    }
}
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div> 
</div>
<br>


<table class="table">
    <tbody>
<div class="container">
<div class="row">
@foreach (var item in Model) {
        <div class="col-4">
    <div class="card mb-3 card border-dark" style="width: 18rem;">
    <img src="@item.Imagem" class="img-fluid card-img-top" alt="Responsive image">
        <div class="card-body">
        <h5 class="card-title">@item.NomeEvento</h5>
        <p class="card-text"> <b>Ingressos Restantes:</b> @item.QuantidadeIngressos<br>
        <b>O local do evento é:</b> @item.Casa.Nome <b>e seu foco é em:</b> @item.Genero.GeneroNome<br>
        <b>O evento ocorrerá em:</b> @item.DataEvento</p>
        <a type="submit" class="btn btn-primary" asp-route-id="@item.EventoId" asp-controller="Compras" asp-action="Compra">Comprar</a>
        </div>
    </div>
    </div>
}
    </div>
</div>
    </tbody>
</table>
