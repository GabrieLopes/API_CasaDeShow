@model CasaEventos.Models.Compra

@{

}


<h4 class="text-light" style="text-align: center;">Comprar Ingressos</h4>
<hr />

<div class="row text-light">
    <div class="col-md-4">
        <form asp-action="ConfirmarCompra" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.Evento.EventoId">
            <input type="hidden" asp-for="IdentityUser.Id">

            <div class="form-group">
                <label asp-for="QtdIngressos" class="control-label">Quantia de ingressos</label>
                <input asp-for="QtdIngressos" class="form-control" type="number" value="1" min="1" max="@Model.Evento.QuantidadeIngressos" />
                <span asp-validation-for="QtdIngressos" class="text-danger"></span>
            </div>

              <div class="form-group">
                <p>Valor Unit√°rio: R$@Model.Evento.ValorIngresso</p>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Comprar</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-light">Voltar para a Lista</a>

</div>
