@model CasaEventos.Models.Genero

@{
    ViewData["Title"] = "Deletar";
}

<h1 class="text-danger" style="text-align: center;">DELETAR</h1>

<h3 class="text-danger" style="text-align: center;">Você tem certeza que quer fazer isso?</h3>
<div class="text-danger" style="text-align: center;">
    <h4>As mudanças não podem ser desfeitas após a exclusão</h4>
    <hr />
    <hr />
    <dl class="row mx-auto">
        <dt class="col-sm-8">
           Genero:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GeneroNome)
        </dd>
    </dl>
    
    <form asp-action="Delete  mx-auto">
        <input type="hidden" asp-for="GeneroId" />
        <button type="submit" value="Delete" class="btn btn-danger">Deletar</button> |
        <a asp-action="Index" class="btn btn-light">Voltar para a lista</a>
    </form>
</div>
