@model CasaEventos.Models.Genero

@{
    ViewData["Title"] = "Criar";
}

<h1 class="text-light" style="text-align: center;">Criar um novo genero</h1>

<hr />
<div class="row">
    <div class="col-md-4  mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GeneroNome" class="control-label">Genero</label>
                <input asp-for="GeneroNome" class="form-control" />
                <span asp-validation-for="GeneroNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-light">Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>


