@model IEnumerable<CasaEventos.Models.Genero>

@{
    ViewData["Title"] = "Inicio";
}


<h1 class="text-light" style="text-align: center;">GENEROS</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar novo genero</a>
</p>
<table class="table text-light">
    <thead>
        <tr>
            <th>
                Genero
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GeneroNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GeneroId" class="btn btn-warning">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.GeneroId" class="btn btn-danger">Deletar</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
